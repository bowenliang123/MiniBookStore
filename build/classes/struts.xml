<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="basicstruts2" extends="struts-default">

		<action name="gateCheck" class="lbw.minibookstore.action.GateCheckAction">
			<result name="admin" type="redirect">/index_admin.jsp</result>
			<result name="member" type="redirect">/index_member.jsp</result>
			<result name="notSignedIn" type="redirect">/welcome.jsp</result>
		</action>


		<action name="signin" class="lbw.minibookstore.action.SignInAction"
			method="execute">
			<result name="admin">/index_admin.jsp</result>
			<result name="member" type="redirect">/index_member.jsp</result>
			<result name="error">/signin_error.jsp</result>
		</action>
		
		<action name="accountlist"
			class="lbw.minibookstore.action.AccountListAction" method="execute">
			<result name="success">/accountlist.jsp</result>
		</action>
		
		<action name="booklist"
			class="lbw.minibookstore.action.BookListAction" method="execute">
			<result name="success">/book_list.jsp</result>
		</action>
		
		<action name="getUsername"
			class="lbw.minibookstore.action.GetUserNameAction" method="execute">
			<result name="success">/username_tip.jsp</result>
		</action>
		

		<action name="register" class="lbw.minibookstore.action.Register"
			method="execute">
			<result name="success">/</result>
			<result name="input">/register.jsp</result>
		</action>
		
		<!-- Profile, Member  -->
		<action name="viewMemberProfile" class="lbw.minibookstore.action.MemberProfileAction"
			method="view">
			<result name="success">/viewProfile_member.jsp</result>
		</action>
		<action name="editMemberProfile_pre" class="lbw.minibookstore.action.MemberProfileAction"
			method="view">
			<result name="success">/editProfile_member.jsp</result>
		</action>
		<action name="editMemberProfile" class="lbw.minibookstore.action.MemberProfileAction"
			method="edit">
			<result name="success" type="redirect">/viewMemberProfile.action</result>
		</action>
		
		<!-- Book, Member -->
		<action name="viewBooklist"
			class="lbw.minibookstore.action.BookListAction" method="execute">
			<result name="success">/member_viewbooklist.jsp</result>
		</action>
		
		<!-- Order, Member -->
		<action name="previewOrder"
			class="lbw.minibookstore.action.OrderAction" method="preview">
			<result name="success">/member_previeworder.jsp</result>
		</action>
		<action name="makeOrder"
			class="lbw.minibookstore.action.OrderAction" method="make">
			<result name="success">/member_successorder.jsp</result>
		</action>
		<action name="viewOrder"
			class="lbw.minibookstore.action.OrderAction" method="view">
			<result name="success">/member_vieworder.jsp</result>
		</action>

	</package>

</struts>