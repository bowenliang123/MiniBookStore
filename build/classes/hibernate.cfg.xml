<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">123456</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/minibookstore</property>
  <property name="hibernate.connection.username">root</property>
  <mapping class="lbw.minibookstore.model.Account" resource="lbw/minibookstore/model/Account.hbm.xml"/>
  <mapping class="lbw.minibookstore.model.Book" resource="lbw/minibookstore/model/Book.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
